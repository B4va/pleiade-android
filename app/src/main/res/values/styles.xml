<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/golder</item>
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name ="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/gold</item>
        <item name ="android:windowActionBar">false</item>
        <item name ="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gold</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/gold</item>
    </style>

    <style name="TextMd">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
